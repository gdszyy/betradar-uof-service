# Betradar UOF配置
# Integration/Testing Environment (集成测试环境)
BETRADAR_ACCESS_TOKEN=your_access_token_here
BETRADAR_MESSAGING_HOST=stgmq.betradar.com:5671
BETRADAR_API_BASE_URL=https://stgapi.betradar.com/v1
ROUTING_KEYS=#

# Production Environment (生产环境)
# BETRADAR_MESSAGING_HOST=mq.betradar.com:5671
# BETRADAR_API_BASE_URL=https://api.betradar.com/v1

# 数据库配置
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# 服务器配置
PORT=8080

# 环境
ENVIRONMENT=production

# 恢复配置
AUTO_RECOVERY=true                    # 启动时自动触发恢复
RECOVERY_AFTER_HOURS=10               # 恢复多少小时内的数据（最多10小时，0=使用默认10小时）
RECOVERY_PRODUCTS=liveodds,pre        # 需要恢复的产品列表

# 飞书通知配置
LARK_WEBHOOK_URL=https://open.larksuite.com/open-apis/bot/v2/hook/your-webhook-id

# Bookmaker 配置
BOOKMAKER_ID=your_bookmaker_id        # Bookmaker ID（默认使用 UOF_USERNAME）
PRODUCTS=liveodds,pre                 # 订阅的产品列表

